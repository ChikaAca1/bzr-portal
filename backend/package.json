{
  "name": "bzr-portal-backend",
  "version": "1.0.0",
  "description": "BZR Portal Backend - AI-Powered Risk Assessment Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "echo 'Using tsx runtime - no build needed'",
    "start": "tsx src/index.ts",
    "start:compiled": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ai": "tsx src/test-ai.ts",
    "test:ai:cache": "tsx src/test-ai-cache.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "bzr",
    "risk-assessment",
    "occupational-safety",
    "serbian-law"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@aws-sdk/client-s3": "^3.917.0",
    "@aws-sdk/s3-request-presigner": "^3.917.0",
    "@hono/node-server": "^1.19.5",
    "@langchain/anthropic": "^1.0.0",
    "@langchain/core": "^1.0.1",
    "@langchain/openai": "^1.0.0",
    "@trpc/server": "^10.45.0",
    "@vercel/blob": "^2.0.0",
    "bcrypt": "^5.1.1",
    "docx-templates": "^4.11.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.29.3",
    "exceljs": "^4.4.0",
    "hono": "^4.0.0",
    "hono-rate-limiter": "^0.4.2",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^1.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "postgres": "^3.4.3",
    "resend": "^6.2.2",
    "superjson": "^2.2.2",
    "tsx": "^4.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.1",
    "drizzle-kit": "^0.20.10",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
