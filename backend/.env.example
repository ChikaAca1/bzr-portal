# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/bzr_portal
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Wasabi S3 Storage ($6.99/TB/month, zero egress fees - budget constraint)
WASABI_ACCESS_KEY_ID=your-wasabi-access-key-id
WASABI_SECRET_ACCESS_KEY=your-wasabi-secret-access-key
WASABI_BUCKET_NAME=bzr-portal-documents
WASABI_REGION=eu-central-1
WASABI_ENDPOINT=https://s3.eu-central-1.wasabisys.com

# Resend Email Service (100 emails/day free tier)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=BZR Portal <noreply@bzr-portal.com>
FRONTEND_URL=http://localhost:5173

# AI Configuration (Phase 2 - Hazard Prediction)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Trial Account Limits
TRIAL_MAX_COMPANIES=1
TRIAL_MAX_WORK_POSITIONS=3
TRIAL_MAX_DOCUMENTS=5
TRIAL_DURATION_DAYS=14

# Document Generation
DOCX_TEMPLATE_PATH=./templates/Akt_Procena_Rizika_Template.docx
DOC_GENERATION_TIMEOUT_MS=60000

# Security
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-char-encryption-key-here
